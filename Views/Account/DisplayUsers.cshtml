@model IEnumerable<AhmedStore.ViewModels.DisplayUsersVM>

@{
    ViewData["Title"] = "Display Users";
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <div class="text-right mb-3">
                <a asp-action="Register" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Address)</th>
                        <th>@Html.DisplayNameFor(model => model.Age)</th>
                        <th>@Html.DisplayNameFor(model => model.Phone)</th>
                        <th>ShopName</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><b>@Html.DisplayFor(modelItem => item.Name)</b></td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                            <td>@Html.DisplayFor(modelItem => item.Age)</td>
                            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                            <td>@item.ShopName</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Email" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Email" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-Email="@item.Email" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                                <a asp-action="AssignShop" asp-controller="Shop" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">
                                    <i class="fa-solid fa-shop"></i> Assign Shop
                                </a>
                                <a asp-action="AssignRole" asp-controller="Role" asp-route-id="@item.Id" class="btn btn-dark btn-sm">
                                    <i class="fa-solid fa-user-gear"></i> Role
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
