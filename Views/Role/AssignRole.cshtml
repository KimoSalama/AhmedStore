@model AhmedStore.ViewModels.AssignRoleVM

@{
    ViewData["Title"] = "Assign Role";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Assign Role to User</h4>
                </div>
                <div class="card-body">
                    <div>
                        @if(ViewBag.UserRoles is not null){
                            @foreach (var role in ViewBag.UserRoles)
                            {
                                <i class="btn-warning p-1 m-1" style="border-radius:5px">
                                    @role
                                    <a asp-action="RemoveRoleFromUser" asp-route-id="@Model.UserId" asp-route-roleName="@role" class="link-danger">
                                        <i class="fa-solid fa-xmark"></i>
                                    </a>
                                </i>
                            }
                        }
                    </div>
                    <form asp-action="AssignRole" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <input asp-for="UserId" class="form-control" hidden />
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoleId" class="form-label fw-bold">Select Role</label>
                            <select asp-for="RoleId" asp-items="Model.RoleList" class="form-select"></select>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-block">Assign Role</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="DisplayUsers" asp-controller="Account" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
