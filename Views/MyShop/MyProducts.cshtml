@model IEnumerable<AhmedStore.ViewModels.MyShopProductsVM>
@{
    int i = 1;
}

<h2 class="text-center my-4">Products</h2>
<div class="text-right">
    <a href="/Product/AddProduct" class="btn btn-primary">Add New Product</a>
</div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Product Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var product in Model)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>@product.ProductName</td>
                                <td>@product.Price L.E</td>
                                <td>@product.Stock</td>
                                <td>@product.ProductCategory</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="@Url.Action("Delete", "MyShop", new { id = product.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No products available</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>