@model AhmedStore.ViewModels.AssignShopVM
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <span class="text-success">@TempData["Added"]</span>

            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title text-center">New Category</h4>
                    <hr />

                    <form asp-action="AssignShop" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="form-group">
                            <label asp-for="ShopId" class="control-label"></label>
                            <select asp-for="ShopId" asp-items="@Model.ShopList" class="form-control" placeholder="Enter category name" ></select>
                            <span asp-validation-for="ShopId" class="text-danger"></span>
                            <input asp-for="ShopOwnerId" value="@Model.ShopOwnerId" hidden/>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="DisplayUsers" asp-Controller="Account" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
