@model IEnumerable<AhmedStore.Models.Shop>

@{
    var Empty= "";
    ViewData["Title"] = "Shops";
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1 class="display-4 text-center mb-4">@ViewData["Title"]</h1>

            <div class="text-right mb-3">
                <a asp-action="AddShop" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ShopName</th>
                        <th>Address</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Owner</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><b>@Html.DisplayFor(modelItem => item.Name)</b></td>
                            <td>@item.ShopAddress</td>
                            <td>@item.Description</td>
                            <td>@item.ShopCategory.Name</td>
                            <td>@if (item.ShopOwner == null)
                                {
                                    @Empty
                                }
                                else
                                {
                                    @item.ShopOwner.UserName
                                }
                            </td>

                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a asp-action="DeleteShop" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
